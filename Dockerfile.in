FROM ${REPOSITORY}/aur-pkgbuild-base-multilib:${ARCH_VERSION}

ENV ARCH_VERSION ${ARCH_VERSION}

ENV VERSION ${VERSION}

ENV REFRESHED_AT ${DATE}

# Ensure man(1) is installed
RUN [ "/usr/bin/pacman", "--noconfirm", "--sync", "--quiet", "man" ]

# Copy & install mingw-w64-binutils package
COPY --chown=_build:_build mingw-w64-binutils-2.29-1-x86_64.pkg.tar.xz /opt/
RUN [ "/usr/bin/pacman", "--noconfirm", "--upgrade", "/opt/mingw-w64-binutils-2.29-1-x86_64.pkg.tar.xz" ]

# Populate Xen pkg spec
COPY --chown=_build:_build aur-xen/ /opt/aur-xen/

# Copy patches to silence OCaml unsafe string compiler errors
COPY --chown=_build:_build apply-ocaml-unsafe-string.patch /opt/aur-xen/
COPY --chown=_build:_build ocaml-unsafe-string.patch /opt/aur-xen/

USER _build
WORKDIR /opt/aur-xen

# Apply patch to PKGBUILD which will apply OCaml unsafe string compiler error fix during build
RUN [ "/usr/bin/patch", "-Np0", "-i", "apply-ocaml-unsafe-string.patch" ]

# Build the package
# TODO: figure out how to import Xen's signing key into _build's keychain
CMD [ "/usr/bin/makepkg", "--clean", "--needed", "--noconfirm", "--rmdeps", "--skippgpcheck", "--syncdeps" ]
